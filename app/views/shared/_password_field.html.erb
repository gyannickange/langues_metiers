<%# 
  Usage: render partial: "shared/password_field", locals: { 
    form: f, 
    field: :password, 
    label: t("users.password"),
    autocomplete: "new-password",
    errors: resource.errors[field],
    show_hint: false,
    hint_text: nil,
    autofocus: false
  }
%>
<%
  field ||= :password
  label ||= t("users.password")
  autocomplete ||= "new-password"
  errors ||= []
  show_hint ||= false
  hint_text ||= nil
  autofocus ||= false
  field_id = "#{form.object_name}_#{field}"
  field_options = {
    id: field_id,
    autocomplete: autocomplete,
    data: { password_toggle_target: "input" },
    class: "w-full px-4 py-3 pr-12 rounded-lg bg-white/20 dark:bg-slate-800/20 backdrop-blur-sm border border-white/30 dark:border-slate-700/30 text-white placeholder-white/60 focus:outline-none focus:ring-2 focus:ring-white/50 focus:border-transparent transition-all"
  }
  field_options[:autofocus] = true if autofocus
%>
<div>
  <%= form.label field, label, class: "block text-sm font-medium text-white mb-2" %>
  <div class="relative" data-controller="password-toggle">
    <%= form.password_field field, field_options %>
    <button
      type="button"
      data-action="click->password-toggle#toggle"
      data-password-toggle-target="icon"
      class="absolute inset-y-0 right-0 flex items-center pr-3 text-white/60 hover:text-white/90 transition-colors"
      aria-label="Toggle password visibility"
    >
      <svg class="w-5 h-5 eye-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
      </svg>
      <svg class="w-5 h-5 eye-off-icon hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21"></path>
      </svg>
    </button>
  </div>
  <% if errors.any? %>
    <p class="mt-1 text-sm text-red-200"><%= errors.first %></p>
  <% end %>
  <% if show_hint && hint_text.present? %>
    <p class="mt-1 text-xs text-white/70"><%= hint_text %></p>
  <% end %>
</div>

