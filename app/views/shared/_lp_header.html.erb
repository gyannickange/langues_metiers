<section class="relative min-h-screen overflow-hidden bg-white text-secondary font-sans">
  
  <!-- Formes géométriques décoratives (basées sur l'image) -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Demi-cercle bleu à gauche -->
    <div class="absolute -left-16 top-32 w-32 h-32 bg-primary rounded-full opacity-90"></div>
    <!-- Cercle jaune en haut à gauche -->
    <div class="absolute left-1/4 -top-8 w-16 h-16 bg-primary-300 rounded-full opacity-60"></div>
    <!-- Cercle vert en bas  -->
    <div class="absolute left-1/3 -bottom-10 w-24 h-24 bg-primary-400 rounded-full opacity-40"></div>
    <!-- Cercle mauve clair au milieu/bas -->
    <div class="absolute left-1/2 bottom-20 w-12 h-12 bg-secondary-300 rounded-full opacity-20"></div>
  </div>
  
  <div class="relative z-10">
    <header class="container mx-auto px-6 py-8">
      <div class="flex items-center justify-between">
        
        <!-- Logo -->
        <div class="flex items-center group">
          <span class="text-3xl font-extrabold text-secondary tracking-tight">
            Insertrice<span class="text-primary">.</span>
          </span>
        </div>
        
        <!-- Navigation -->
        <nav class="hidden lg:flex items-center space-x-8 font-medium text-gray-600">
          <a class="hover:text-primary transition-colors duration-300" href="#"><%= t('home.navigation.home') %></a>
          <%= link_to t('home.navigation.fields'), fields_path, class: "hover:text-primary transition-colors duration-300" %>
          <%= link_to "CLE", cle_path, class: "hover:text-primary transition-colors duration-300" %>
          <a class="hover:text-primary transition-colors duration-300" href="#"><%= t('home.navigation.blog') %></a>
          <a class="hover:text-primary transition-colors duration-300" href="#"><%= t('home.navigation.about') %></a>
          <a class="hover:text-primary transition-colors duration-300" href="#"><%= t('home.navigation.contact') %></a>
        </nav>
        
        <!-- Action / Profile -->
        <div class="flex items-center space-x-6">
          <a class="hidden md:flex items-center text-gray-600 hover:text-primary font-medium transition-colors duration-300" href="#">
            <span class="material-icons mr-2 text-xl">phone</span>
            <span>+68 585 88666</span>
          </a>
          <%= link_to t('home.navigation.login'), new_user_session_path, class: "flex items-center space-x-2 text-secondary font-semibold hover:text-primary transition-colors" %>
        </div>
      </div>
    </header>
    
    <main class="container mx-auto px-6 py-12 lg:py-24">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        
        <!-- Contenu Gauche -->
        <div class="max-w-2xl xl:pr-12 animate-fade-in-up">
          <h1 class="text-5xl lg:text-7xl font-extrabold text-secondary leading-[1.1] mb-8 tracking-tight">
            Transformez votre diplôme en 
            <span class="relative inline-block px-4 py-2 mt-2">
              <span class="absolute inset-0 bg-primary/20 rounded-xl transform -rotate-1"></span>
              <span class="relative z-10 text-secondary">trajectoire professionnelle</span>
              
              <!-- Sparkles effect based on screenshot -->
              <div class="absolute -top-10 -right-8 w-16 h-16 text-primary opacity-80 animate-pulse pointer-events-none">
                <svg viewBox="0 0 100 100" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                  <!-- Large sparkle -->
                  <path d="M50 0 L56 38 L94 44 L56 50 L50 88 L44 50 L6 44 L44 38 Z" />
                  <!-- Smaller top right sparkle -->
                  <path d="M85 10 L88 22 L100 25 L88 28 L85 40 L82 28 L70 25 L82 22 Z" />
                  <!-- Smaller left sparkle -->
                  <path d="M20 20 L22 28 L30 30 L22 32 L20 40 L18 32 L10 30 L18 28 Z" />
                </svg>
              </div>
            </span> 
            <br/>claire et stratégique.
          </h1>

          <!-- Barre de recherche (style image) -->
          <div class="relative max-w-lg mb-8 shadow-[0_8px_30px_rgb(0,0,0,0.04)] rounded-full bg-white p-2 flex items-center border border-gray-100">
            <input type="text" placeholder="Rechercher une filière ou un métier..." class="w-full bg-transparent border-none focus:ring-0 text-gray-600 px-6 py-3 placeholder-gray-400 outline-none">
            <button class="w-12 h-12 flex items-center justify-center rounded-full text-primary hover:bg-gray-50 transition-colors focus:outline-none">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path></svg>
            </button>
          </div>

          <!-- CTA Bas (style image) -->
          <div class="flex flex-col sm:flex-row items-start sm:items-center space-y-4 sm:space-y-0 sm:space-x-4">
            <span class="text-gray-500 font-medium text-sm">Un diagnostic structuré pour identifier votre positionnement ?</span>
            <%= link_to "#", class: "bg-primary hover:bg-primary-600 text-white font-bold py-3 px-8 rounded-full shadow-lg shadow-primary/30 transition-all duration-300 transform hover:-translate-y-1" do %>
              Faire mon diagnostic
            <% end %>
          </div>
        </div>

        <!-- Contenu Droite (Image hero-sideimg.png) -->
        <div class="relative w-full h-full flex justify-center lg:justify-end mt-12 lg:mt-0">
          <%= image_tag "hero-sideimg.png", class: "w-full max-w-lg xl:max-w-xl h-auto object-contain relative z-10 drop-shadow-2xl animate-fade-in-up" %>
        </div>
        
      </div>
    </main>
  </div>
</section>
