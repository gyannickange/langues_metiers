<section class="relative py-24 bg-cover bg-center bg-fixed overflow-hidden" style="background-image: url('https://images.unsplash.com/photo-1517245386807-bb43f82c33c4?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80');">
  <!-- Overlay premium avec gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-secondary-900/80 via-secondary-800/70 to-gray-900/80"></div>
  <div class="absolute inset-0 bg-black/20"></div>
  
  <!-- Éléments décoratifs animés -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute -top-20 -right-20 w-80 h-80 bg-primary/20 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute -bottom-32 -left-32 w-96 h-96 bg-primary/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
    <div class="absolute top-1/4 right-1/4 w-4 h-4 bg-primary rounded-full animate-ping" style="animation-delay: 2s;"></div>
    <div class="absolute bottom-1/3 left-1/3 w-2 h-2 bg-white rounded-full animate-ping" style="animation-delay: 3s;"></div>
    
    <!-- Formes géométriques -->
    <div class="absolute top-1/2 left-1/4 transform -translate-x-1/2 -translate-y-1/2 w-32 h-32 border border-primary/30 rounded-3xl rotate-12 animate-spin-slow"></div>
    <div class="absolute bottom-1/4 right-1/3 w-24 h-24 border border-white/20 rounded-full animate-bounce" style="animation-delay: 1.5s;"></div>
  </div>
  
  <div class="relative z-10 container mx-auto px-6 text-center text-white">
    <!-- Badge animé -->
    <div class="inline-block mb-8 animate-fade-in-up">
      <div class="inline-flex items-center bg-white/20 backdrop-blur-sm text-white text-sm font-semibold px-6 py-3 rounded-full border border-white/30 hover:bg-white/30 transition-all duration-300">
        <span class="w-2 h-2 bg-primary rounded-full mr-3 animate-pulse"></span>
        Rejoignez notre communauté
      </div>
    </div>
    
    <h2 class="text-4xl lg:text-6xl font-bold leading-tight mb-8 animate-fade-in-up" style="animation-delay: 0.2s;">
      <span class="bg-gradient-to-r from-white via-primary-100 to-white bg-clip-text text-transparent">
        <%= t('home.cta.title') %>
      </span>
    </h2>
    
    <p class="text-xl lg:text-2xl mb-12 max-w-4xl mx-auto leading-relaxed text-gray-200 animate-fade-in-up" style="animation-delay: 0.4s;">
      <%= t('home.cta.subtitle') %>
    </p>
    
    <!-- Bouton CTA premium -->
    <div class="animate-fade-in-up" style="animation-delay: 0.6s;">
      <a href="#contact" class="group relative inline-flex items-center btn-primary px-12 py-5 rounded-2xl font-bold shadow-2xl hover:shadow-primary/25">
        <span class="relative z-10 text-lg"><%= t('home.cta.action_button') %></span>
        <svg class="w-6 h-6 ml-3 group-hover:translate-x-1 transition-transform duration-300" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
        </svg>
        
        <!-- Effet de brillance -->
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent opacity-0 group-hover:opacity-100 group-hover:animate-shine rounded-2xl"></div>
      </a>
    </div>
    
    <!-- Statistiques flottantes -->
    <div class="mt-16 grid grid-cols-1 md:grid-cols-3 gap-8 max-w-4xl mx-auto animate-fade-in-up" style="animation-delay: 0.8s;">
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20 hover:bg-white/20 transition-all duration-300">
        <div class="text-3xl font-bold text-primary mb-2">2000+</div>
        <div class="text-gray-200">Étudiants accompagnés</div>
      </div>
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20 hover:bg-white/20 transition-all duration-300">
        <div class="text-3xl font-bold text-primary mb-2">95%</div>
        <div class="text-gray-200">Taux de réussite</div>
      </div>
      <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 border border-white/20 hover:bg-white/20 transition-all duration-300">
        <div class="text-3xl font-bold text-primary mb-2">50+</div>
        <div class="text-gray-200">Partenaires entreprises</div>
      </div>
    </div>
  </div>
</section>