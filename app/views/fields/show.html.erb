<% content_for :title, @field.name %>

<% content_for :header do %>
  <%= render 'shared/navbar' %>
<% end %>

<div class="min-h-screen bg-gray-50">
  <!-- Header de la filiÃ¨re -->
  <div class="relative overflow-hidden bg-secondary-900 text-white">
    <div class="absolute inset-0 pointer-events-none">
      <%= render 'shared/animated_decorations' %>
    </div>

    <div class="container relative mx-auto px-4 md:px-6 lg:px-8 py-14 lg:py-18">
      <div class="grid gap-12 lg:grid-cols-[minmax(0,1fr)_420px]">
        <div class="space-y-8">
          <!-- Breadcrumb -->
          <nav class="text-sm text-white/60" aria-label="Fil d'Ariane">
            <ol class="flex flex-wrap items-center gap-2">
              <li class="inline-flex items-center gap-1">
                <span class="material-icons text-xs">home</span>
                <%= link_to t('fields.show.breadcrumb.home'), root_path, class: "hover:text-white transition-colors" %>
              </li>
              <li class="inline-flex items-center gap-1">
                <span class="material-icons text-xs">chevron_right</span>
                <%= link_to t('fields.show.breadcrumb.fields'), fields_path, class: "hover:text-white transition-colors" %>
              </li>
              <li class="inline-flex items-center gap-1 text-white">
                <span class="material-icons text-xs">chevron_right</span>
                <span class="font-medium"><%= @field.name %></span>
              </li>
            </ol>
          </nav>

          <!-- Title -->
          <div class="space-y-4">
            <span class="inline-flex items-center gap-2 rounded-full bg-secondary-800/60 px-4 py-1.5 text-xs font-semibold uppercase tracking-[0.25em] text-white/80">
              <span class="material-icons text-sm">category</span>
              <%= t('fields.show.badge') %>
            </span>
            <div>
              <p class="text-white/60 text-sm font-semibold tracking-[0.4em] uppercase mb-2"><%= t('fields.show.discover') %></p>
              <h1 class="text-4xl md:text-5xl font-semibold leading-tight"><%= @field.name %></h1>
            </div>
            <% if @field.description.present? %>
              <div class="text-lg text-white/80 leading-relaxed max-w-3xl">
                <%= simple_format(@field.description) %>
              </div>
            <% end %>
          </div>

          <!-- Stats -->
          <div class="grid gap-4 sm:grid-cols-3">
            <div class="rounded-2xl border border-white/10 bg-secondary-800/40 p-4">
              <div class="flex items-center gap-3">
                <span class="material-icons text-2xl text-primary-400">route</span>
                <div>
                  <p class="text-white/60 text-sm"><%= t('fields.show.stats.roadmaps_proposed') %></p>
                  <p class="text-2xl font-semibold"><%= @roadmaps.count %></p>
                </div>
              </div>
            </div>
            <div class="rounded-2xl border border-white/10 bg-secondary-800/40 p-4">
              <div class="flex items-center gap-3">
                <span class="material-icons text-2xl text-primary-400">timeline</span>
                <div>
                  <p class="text-white/60 text-sm"><%= t('fields.show.stats.guided_progression') %></p>
                  <p class="text-2xl font-semibold"><%= t('fields.show.stats.structured_steps') %></p>
                </div>
              </div>
            </div>
            <div class="rounded-2xl border border-white/10 bg-secondary-800/40 p-4">
              <div class="flex items-center gap-3">
                <span class="material-icons text-2xl text-primary-400">update</span>
                <div>
                  <p class="text-white/60 text-sm"><%= t('fields.show.stats.last_update') %></p>
                  <p class="text-lg font-semibold"><%= l(@field.updated_at, format: :long) %></p>
                </div>
              </div>
            </div>
          </div>

          <!-- Actions -->
          <div class="flex flex-col gap-4 sm:flex-row sm:items-center">
            <%= link_to "#roadmaps", class: "inline-flex items-center justify-center gap-2 rounded-2xl bg-primary px-6 py-3 font-semibold text-secondary-900 shadow-lg shadow-primary/30 transition hover:-translate-y-0.5 hover:bg-primary-600" do %>
              <%= t('fields.show.actions.explore_roadmaps') %>
              <span class="material-icons text-base">arrow_forward</span>
            <% end %>
            <%= link_to fields_path, class: "inline-flex items-center justify-center gap-2 rounded-2xl border border-white/30 px-6 py-3 font-semibold text-white transition hover:border-white hover:bg-white/5" do %>
              <span class="material-icons text-base">arrow_back</span>
              <%= t('fields.show.actions.back_to_fields') %>
            <% end %>
          </div>
        </div>

        <!-- Highlight card -->
        <div>
          <div class="relative rounded-3xl bg-white p-8 text-secondary-900 shadow-2xl">
            <div class="mb-6 inline-flex items-center gap-2 rounded-full bg-primary-50 px-3 py-1 text-xs font-semibold uppercase tracking-[0.3em] text-primary-700">
              <span class="material-icons text-base">insights</span>
              <%= t('fields.show.highlight_card.title') %>
            </div>
            <p class="text-lg text-gray-700 mb-6">
              <%= t('fields.show.highlight_card.description') %>
            </p>
            <div class="space-y-4">
              <div class="rounded-2xl border border-primary-100 p-4">
                <p class="text-sm font-semibold text-secondary-800 mb-1"><%= t('fields.show.highlight_card.skills_approach.title') %></p>
                <p class="text-sm text-gray-600"><%= t('fields.show.highlight_card.skills_approach.description') %></p>
              </div>
              <div class="rounded-2xl border border-primary-100 p-4">
                <p class="text-sm font-semibold text-secondary-800 mb-1"><%= t('fields.show.highlight_card.modular_paths.title') %></p>
                <p class="text-sm text-gray-600"><%= t('fields.show.highlight_card.modular_paths.description') %></p>
              </div>
              <div class="rounded-2xl border border-primary-100 p-4">
                <p class="text-sm font-semibold text-secondary-800 mb-1"><%= t('fields.show.highlight_card.aligned_field.title') %></p>
                <p class="text-sm text-gray-600"><%= t('fields.show.highlight_card.aligned_field.description') %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= render "fields/roadmaps", roadmaps: @roadmaps %>
</div>
