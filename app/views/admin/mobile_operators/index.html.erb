<%# app/views/admin/mobile_operators/index.html.erb %>
<div class="px-6 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-xl font-bold">Opérateurs Mobile (<%= @operators.count %>)</h1>
    <%= link_to "Nouveau", new_admin_mobile_operator_path, class: "bg-blue-700 text-white px-4 py-2 rounded text-sm" %>
  </div>
  <table class="w-full text-sm border-collapse">
    <thead><tr class="border-b text-left text-gray-500">
      <th class="pb-2 pr-4">Pays</th>
      <th class="pb-2 pr-4">Nom</th>
      <th class="pb-2 pr-4">Code</th>
      <th class="pb-2">Actif</th>
      <th></th>
    </tr></thead>
    <tbody>
      <% @operators.each do |op| %>
        <tr class="border-b hover:bg-gray-50">
          <td class="py-2 pr-4"><%= op.country_code %></td>
          <td class="pr-4 font-medium"><%= op.name %></td>
          <td class="pr-4 text-gray-500"><%= op.code %></td>
          <td><%= op.active? ? "✓" : "—" %></td>
          <td class="text-right">
            <%= link_to "Modifier", edit_admin_mobile_operator_path(op), class: "text-blue-600 mr-3 text-xs" %>
            <%= button_to "Supprimer", admin_mobile_operator_path(op), method: :delete,
                  data: { turbo_confirm: "Confirmer ?" },
                  class: "text-red-500 text-xs bg-transparent border-0 cursor-pointer" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
