<%# app/views/admin/mobile_operators/_form.html.erb %>
<%= form_with model: [:admin, operator], class: "space-y-4 max-w-2xl" do |f| %>
  <% if operator.errors.any? %>
    <div class="bg-red-50 border border-red-200 p-3 rounded text-sm text-red-700">
      <% operator.errors.full_messages.each do |msg| %><div><%= msg %></div><% end %>
    </div>
  <% end %>

  <div>
    <%= f.label :name, "Nom", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, class: "w-full border rounded px-3 py-2 text-sm" %>
  </div>
  <div>
    <%= f.label :code, "Code opÃ©rateur (Pawapay)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :code, class: "w-full border rounded px-3 py-2 text-sm" %>
  </div>
  <div>
    <%= f.label :country_code, "Code pays (ex: CI, SN)", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :country_code, class: "w-full border rounded px-3 py-2 text-sm" %>
  </div>
  <div>
    <%= f.label :logo_url, "URL Logo", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :logo_url, class: "w-full border rounded px-3 py-2 text-sm" %>
  </div>
  <div class="flex items-center gap-2">
    <%= f.check_box :active, class: "accent-blue-600" %>
    <%= f.label :active, "Actif", class: "text-sm font-medium text-gray-700" %>
  </div>

  <%= f.submit "Enregistrer", class: "bg-blue-700 text-white px-6 py-2 rounded font-medium text-sm" %>
<% end %>
