<%= form_with model: [:admin, @field, @roadmap] do |f| %>
  <% if @roadmap.errors.any? %>
    <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded mb-4">
      <h4 class="font-bold">Erreurs :</h4>
      <ul class="list-disc ml-5">
        <% @roadmap.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-4">
    <div>
      <%= f.label :title, "Titre", class: "block text-sm font-medium" %>
      <%= f.text_field :title, class: "mt-1 block w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :description, "Description", class: "block text-sm font-medium" %>
      <%= f.text_area :description, rows: 4, class: "mt-1 block w-full border rounded px-3 py-2" %>
    </div>
  </div>

  <div class="mt-6 flex items-center gap-2">
    <%= f.submit @roadmap.new_record? ? "CrÃ©er la roadmap" : "Mettre Ã  jour", class: "inline-flex items-center bg-primary text-white px-4 py-2 rounded hover:bg-primary-600" %>
    <%= link_to "Annuler", admin_field_roadmaps_path(@field), class: "inline-flex items-center bg-gray-100 text-gray-800 px-4 py-2 rounded hover:bg-gray-200" %>
  </div>
<% end %>
