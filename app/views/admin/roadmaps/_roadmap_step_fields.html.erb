<div
  class="rounded-2xl border border-slate-200 bg-white p-6 shadow-sm space-y-5"
  data-nested-form-target="item"
  data-new-record="<%= step_form.object&.persisted? ? 'false' : 'true' %>">
  <%= step_form.hidden_field :_destroy %>

  <div class="flex flex-col gap-2 md:flex-row md:items-start md:justify-between">
    <div>
      <p class="text-xs font-semibold uppercase tracking-[0.2em] text-primary-600">
        <%= t("admin.roadmaps.steps.badge") %>
      </p>
      <h4 class="text-xl font-semibold text-secondary-900">
        <%= t("admin.roadmaps.steps.title") %>
      </h4>
    </div>
    <button
      type="button"
      class="inline-flex items-center gap-2 rounded-full border border-red-100 px-4 py-2 text-sm font-semibold text-red-600 transition hover:bg-red-50"
      data-action="nested-form#remove">
      <span class="material-icons text-base">delete</span>
      <%= t("admin.roadmaps.steps.remove") %>
    </button>
  </div>

  <div class="grid grid-cols-1 gap-4 md:grid-cols-2">
    <div>
      <%= step_form.label :title, t("admin.roadmaps.steps.fields.title"), class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= step_form.text_field :title, class: "mt-1 block w-full rounded-xl border border-slate-200 px-4 py-2.5 text-slate-900 focus:border-primary-500 focus:ring-primary-500" %>
      <% if step_form.object.errors[:title].any? %>
        <p class="mt-1 text-sm text-red-600"><%= step_form.object.errors[:title].first %></p>
      <% end %>
    </div>
    <div>
      <%= step_form.label :order, t("admin.roadmaps.steps.fields.order"), class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= step_form.number_field :order, class: "mt-1 block w-full rounded-xl border border-slate-200 px-4 py-2.5 text-slate-900 focus:border-primary-500 focus:ring-primary-500", data: { nested_form_order_field: true } %>
      <% if step_form.object.errors[:order].any? %>
        <p class="mt-1 text-sm text-red-600"><%= step_form.object.errors[:order].first %></p>
      <% end %>
    </div>
  </div>

  <div class="space-y-4">
    <div>
      <%= step_form.label :objective, t("admin.roadmaps.steps.fields.objective"), class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= step_form.text_area :objective, rows: 3, class: "mt-1 block w-full rounded-2xl border border-slate-200 px-4 py-3 text-slate-900 focus:border-primary-500 focus:ring-primary-500" %>
      <% if step_form.object.errors[:objective].any? %>
        <p class="mt-1 text-sm text-red-600"><%= step_form.object.errors[:objective].first %></p>
      <% end %>
    </div>
    <div>
      <%= step_form.label :skills, t("admin.roadmaps.steps.fields.skills"), class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= step_form.text_area :skills, rows: 3, class: "mt-1 block w-full rounded-2xl border border-slate-200 px-4 py-3 text-slate-900 focus:border-primary-500 focus:ring-primary-500" %>
      <% if step_form.object.errors[:skills].any? %>
        <p class="mt-1 text-sm text-red-600"><%= step_form.object.errors[:skills].first %></p>
      <% end %>
    </div>
    <div>
      <%= step_form.label :activities, t("admin.roadmaps.steps.fields.activities"), class: "block text-sm font-medium text-slate-700 mb-1" %>
      <%= step_form.text_area :activities, rows: 3, class: "mt-1 block w-full rounded-2xl border border-slate-200 px-4 py-3 text-slate-900 focus:border-primary-500 focus:ring-primary-500" %>
      <% if step_form.object.errors[:activities].any? %>
        <p class="mt-1 text-sm text-red-600"><%= step_form.object.errors[:activities].first %></p>
      <% end %>
    </div>
  </div>
</div>

