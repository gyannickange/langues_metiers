<%= form_with model: [:admin, field] do |f| %>
  <div class="space-y-4">
    <div>
      <%= f.label :name, class: "block text-sm font-medium" %>
      <%= f.text_field :name, class: "mt-1 block w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :description, class: "block text-sm font-medium" %>
      <%= f.text_area :description, rows: 4, class: "mt-1 block w-full border rounded px-3 py-2" %>
    </div>

    <div>
      <%= f.label :status, class: "block text-sm font-medium" %>
      <%= f.select :status, Field.statuses.keys.map { |k| [k.humanize, k] }, {}, class: "mt-1 block w-full border rounded px-3 py-2" %>
    </div>
  </div>

  <div class="mt-4 flex items-center gap-2">
    <%= f.submit t("Save"), class: "inline-flex items-center bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
    <%= link_to t("Cancel"), admin_fields_path, class: "inline-flex items-center bg-gray-100 text-gray-800 px-4 py-2 rounded hover:bg-gray-200" %>
  </div>
<% end %>


