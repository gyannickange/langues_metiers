<%# app/views/admin/questions/_form.html.erb %>
<%= form_with model: [:admin, question], class: "space-y-4 max-w-2xl" do |f| %>
  <% if question.errors.any? %>
    <div class="bg-red-50 border border-red-200 p-3 rounded text-sm text-red-700">
      <% question.errors.full_messages.each do |msg| %><div><%= msg %></div><% end %>
    </div>
  <% end %>

  <div class="grid grid-cols-3 gap-4">
    <div>
      <%= f.label :bloc, "Bloc (1–5)", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :bloc, min: 1, max: 5, class: "w-full border rounded px-3 py-2 text-sm" %>
    </div>
    <div>
      <%= f.label :position, "Position", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :position, min: 1, class: "w-full border rounded px-3 py-2 text-sm" %>
    </div>
    <div>
      <%= f.label :kind, "Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :kind, [["Likert", "likert"], ["Choix multiple", "multiple_choice"]],
            {}, class: "w-full border rounded px-3 py-2 text-sm" %>
    </div>
  </div>

  <div>
    <%= f.label :text, "Texte de la question", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_area :text, rows: 3, class: "w-full border rounded px-3 py-2 text-sm" %>
  </div>

  <div class="flex items-center gap-4">
    <div class="flex items-center gap-2">
      <%= f.check_box :scored, class: "accent-blue-600" %>
      <%= f.label :scored, "Scorée", class: "text-sm font-medium text-gray-700" %>
    </div>
    <div class="flex items-center gap-2">
      <%= f.check_box :active, class: "accent-blue-600" %>
      <%= f.label :active, "Active", class: "text-sm font-medium text-gray-700" %>
    </div>
  </div>

  <%= f.submit "Enregistrer", class: "bg-blue-700 text-white px-6 py-2 rounded font-medium text-sm" %>
<% end %>
