    </div>
  </div>
</section>

<!-- Section Comment ça fonctionne ? -->
<section class="relative py-24 bg-gradient-to-br from-primary-50 via-white to-secondary-50 overflow-hidden">
  <!-- Background decorative elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-20 left-10 w-64 h-64 bg-primary/5 rounded-full blur-3xl"></div>
    <div class="absolute bottom-20 right-10 w-80 h-80 bg-secondary/5 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-96 h-96 border border-primary/10 rounded-full"></div>
  </div>
  
  <div class="container mx-auto px-6 relative z-10">
    <!-- En-tête de section -->
    <div class="text-center mb-20">
      <div class="inline-flex items-center bg-white/80 backdrop-blur-sm text-secondary-800 text-sm font-semibold px-6 py-3 rounded-full border border-primary/20 mb-8">
        <span class="w-2 h-2 bg-primary rounded-full mr-3 animate-pulse"></span>
        PROCESSUS SIMPLIFIÉ
      </div>
      <h2 class="text-4xl lg:text-5xl font-bold text-secondary-800 mb-8">
        Comment ça 
        <span class="relative">
          <span class="bg-gradient-to-r from-primary-600 to-primary-500 bg-clip-text text-transparent">fonctionne</span>
          <div class="absolute -bottom-2 left-0 w-full h-3 bg-primary/20 -skew-x-12 transform"></div>
        </span>
        ?
      </h2>
      <p class="text-xl lg:text-2xl text-gray-600 max-w-4xl mx-auto font-light leading-relaxed">
        Un parcours en 3 étapes simples pour transformer votre passion des langues en carrière réussie
      </p>
    </div>

    <!-- Steps avec timeline -->
    <div class="relative">
      <!-- Timeline line -->
      <div class="hidden lg:block absolute top-24 left-0 right-0 h-1 bg-gradient-to-r from-primary/20 via-primary to-primary/20 rounded-full"></div>
      
      <!-- Grille des 3 étapes -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% t('home.how_it_works.steps').each_with_index do |step, index| %>
          <div class="group relative bg-white p-8 rounded-3xl hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-4 border border-gray-100 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-br from-<%= index.even? ? 'primary' : 'secondary' %>/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative z-10">
              <div class="mb-6">
                <span class="material-icons text-<%= index.even? ? 'primary' : 'secondary' %> !text-4xl"><%= step[:icon] %></span>
              </div>
              <h3 class="text-2xl font-bold text-secondary-800 mb-4 group-hover:text-<%= index.even? ? 'primary' : 'secondary' %>-600 transition-colors duration-300">
                <%= step[:title] %>
              </h3>
              <p class="text-gray-600 leading-relaxed"><%= step[:content] %></p>
            </div>
          </div>
        <% end %>
      </div>
      
      <!-- Call to action -->
      <div class="text-center mt-16">
        <div class="inline-flex items-center space-x-4 bg-white/90 backdrop-blur-sm p-6 rounded-2xl shadow-lg border border-gray-100">
          <div class="w-12 h-12 bg-gradient-to-br from-primary to-primary-600 rounded-full flex items-center justify-center">
            <span class="material-icons text-white">rocket_launch</span>
          </div>
          <div class="text-left">
            <div class="text-lg font-bold text-secondary-800">Prêt à commencer ?</div>
            <div class="text-sm text-gray-600">Découvrez nos filières maintenant</div>
          </div>
          <%= link_to fields_path, class: "btn-primary" do %>
            Explorer →
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>

